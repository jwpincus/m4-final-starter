<div class="">
  <form id="new-link-form">
    URL: <input type="text" name="link[url]" id="link_url" /><br>
    Title: <input type="text" name="link[title]" id="link_title" /><br>
    <input type="submit" value="Add Link" id="submit-link-button"/>
</form>
</div>
<hr>
<div class="links-section">
  <% current_user.links.each do |link| %>
    <div class="link" data-link-id="<%= link.id %>">
      <h3 class="title">Title: <%= link.title %></h4><br>
      <h3 class="url">URL: <a href="<%= link.url %>"><%= link.url %></a></h4><br>
      <h4>Read?: <%= link.read %></h4><br>
      <button type="button">edit</button>
    </div>
  <% end %>
</div>
